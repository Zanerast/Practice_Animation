<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_animation_resources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/animation_resources"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_activity_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/activity_transition"
        app:layout_constraintEnd_toEndOf="@+id/btn_animation_resources"
        app:layout_constraintStart_toStartOf="@+id/btn_animation_resources"
        app:layout_constraintTop_toBottomOf="@+id/btn_animation_resources" />

    <Button
        android:id="@+id/btn_scene_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/scene_transition"
        app:layout_constraintEnd_toEndOf="@+id/btn_activity_transition"
        app:layout_constraintStart_toStartOf="@+id/btn_activity_transition"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_transition" />

    <Button
        android:id="@+id/btn_background_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/background_animation"
        app:layout_constraintEnd_toEndOf="@+id/btn_scene_transition"
        app:layout_constraintStart_toStartOf="@+id/btn_scene_transition"
        app:layout_constraintTop_toBottomOf="@+id/btn_scene_transition" />

</android.support.constraint.ConstraintLayout>